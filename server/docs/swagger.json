{
    "openapi": "3.0.4",
    "info" : {
        "title" : "War Ticket API",
        "version" : "1.0.0",
        "description": "Backend service designed to manage event-based ticket sales with secure user authentication via Google OAuth 2.0."
    },
    "components": {
        "securitySchemes": {
            "Bearer": {
                "scheme": "bearer",
                "type": "http",
                "bearerFormat": "JWT",
                "description": "Authorization : Bearer [JWT_TOKEN]"
            }
        },
        "responses": {
            "Unauthorized": {
                "description": "Unauthorized",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "statusCode": {
                                    "type": "number"
                                },
                                "message":{
                                    "type": "string"
                                },
                                "errors": {
                                    "type": "array",
                                    "default": []
                                }
                            }
                        }
                    }
                }
            },
            "Unprocessable_Entity": {
                "description": "Unprocessable Entity",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "statusCode":{"type": "number"},
                                "message": {
                                    "type": "string"
                                },
                                "errors": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "expected": {
                                                "type": "string",
                                                "default": "string"
                                            },
                                            "code": {
                                                "type": "string",
                                                "default":"invalid_type"
                                            },
                                            "path": {
                                                "type": "array",
                                                "default": ["name"]
                                            },
                                            "message": {
                                                "type": "string",
                                                "default": "Invalid input: expected string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
          "url": "http://localhost:8080/api",
          "description": "Development server"
        }
      ],
    "paths": {
        "/auth/signin": {
            "get": {
                "tags": ["Auth"],
                "summary": "Signin with google OAuth2.0",
                "responses": {
                    "304": {
                        "description": "Redirect to frontend with JWT token in query string, Example: https://frontend.app/auth/callback?token=JWT_TOKEN"
                    },
                    "401": {
                        "description": "Unauthorize or signin failed"
                    }
                }
            }
        },
