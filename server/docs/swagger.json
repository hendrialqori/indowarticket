                                       "statusCode": {
                                            "type": "integer"
                                       },
                                       "data": {
                                        "type": "object",
                                        "properties": {
                                            "id" :{
                                                "type": "integer"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "display_name": {
                                                "type": "string"
                                            },
                                            "picture": {
                                                "type": "string"
                                            },
                                            "role": {
                                                "type": "string"
                                            },
                                            "provider_id": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            }
                                        }
                                       },
                                       "message": {
                                        "type": "string"
                                       }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "statusCode": {
                                            "type": "integer",
                                            "default": 401
                                        },
                                        "errors": {
                                            "type": "array",
                                            "default": "[]"
                                        },
                                        "message": {
                                            "type": "string",
                                            "default": "Unauthorized"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
